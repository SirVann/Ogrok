			</li>
		</modExtensions>

		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>11</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>edge</label>
				<labelUsedInLogging>false</labelUsedInLogging>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>29</power>
				<cooldownTime>3.5</cooldownTime>
				<armorPenetration>0.4</armorPenetration>
