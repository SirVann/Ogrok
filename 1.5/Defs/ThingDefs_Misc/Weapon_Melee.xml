<Defs>

	<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
		<defName>DA_MeleeWeapon_GreatCleaver</defName>
		<label>great cleaver</label>
		<description>A great cleaver originally designed as a butchering tool. Large and unwieldy it is a crude weapon which can deliver gruesome blows.</description>
		<graphicData>
			<texPath>Things/WeaponMelee/GreatCleaver</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.2,1.2)</drawSize>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<equippedAngleOffset>-45</equippedAngleOffset>

		<statBases>
			<WorkToMake>16000</WorkToMake>
			<Mass>3.75</Mass>
		</statBases>

		<costStuffCount>110</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costList>
			<WoodLog>30</WoodLog>
		</costList>
		
	<equippedStatOffsets>
        <ButcheryFleshSpeed>0.25</ButcheryFleshSpeed>
        <ButcheryFleshEfficiency>0.15</ButcheryFleshEfficiency>
	</equippedStatOffsets>

