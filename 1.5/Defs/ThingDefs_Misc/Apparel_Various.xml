<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorSmithableBase">
    <defName>DA_Shieldplate</defName>
    <label>shieldplate</label>
    <description>A set of large plates covering the body from the legs to the belly.</description>
    <possessionCount>1</possessionCount>
	<techLevel>Medieval</techLevel>

    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <displayPriority>250</displayPriority>
    </recipeMaker>
	
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Shieldplate/Shieldplate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>170</costStuffCount>

    <statBases>
      <WorkToMake>38000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>0.76</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
	
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
	
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
	
    <apparel>
	<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Shieldplate/Shieldplate</wornGraphicPath>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
